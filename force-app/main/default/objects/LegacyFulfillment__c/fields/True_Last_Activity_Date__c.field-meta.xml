<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>True_Last_Activity_Date__c</fullName>
    <description>Displays created date if the last activity date is null, else displays the last activity date</description>
    <externalId>false</externalId>
    <formula>IF((ISNULL(LastActivityDate)),DATEVALUE(CreatedDate),LastActivityDate)</formula>
    <formulaTreatBlanksAs>BlankAsZero</formulaTreatBlanksAs>
    <inlineHelpText>Last Activity Date Counting Creation</inlineHelpText>
    <label>True Last Activity Date</label>
    <required>false</required>
    <trackHistory>false</trackHistory>
    <trackTrending>false</trackTrending>
    <type>Date</type>
</CustomField>
