<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Referrals_is_1thru4</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(OR (ISNULL( Referrals__c ),(AND( Referrals__c &lt;5, Referrals__c &gt;0))))</errorConditionFormula>
    <errorMessage>Referrals must be a number between 1-4</errorMessage>
</ValidationRule>
