<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Enter_Products</fullName>
    <active>false</active>
    <description>ISPICKVAL(  StageName , &quot;Purchased&quot;) &amp;&amp;
ISBLANK(TEXT(Products__c))</description>
    <errorConditionFormula>AND(
ISPICKVAL(  StageName , &quot;Purchased&quot;),
ISBLANK(Products__c)
)</errorConditionFormula>
    <errorDisplayField>StageName</errorDisplayField>
    <errorMessage>You must add the products purchased.</errorMessage>
</ValidationRule>
