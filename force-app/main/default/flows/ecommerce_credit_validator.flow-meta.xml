            </value>
        </filters>
        <inputAssignments>
            <field>AccountManager__c</field>
            <value>
                <elementReference>Opportunity.FSP_Sales_Rep__c</elementReference>
            </value>
        </inputAssignments>
        <object>LineRecipient__c</object>
    </recordUpdates>
