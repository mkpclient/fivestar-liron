    </formulas>
    <interviewLabel>ecommerce credit validator {!$Flow.CurrentDateTime}</interviewLabel>
    <label>ecommerce credit validator</label>
    <loops>
        <name>for_each_task</name>
        <label>for each task</label>
        <locationX>483</locationX>
        <locationY>340</locationY>
        <assignNextValueToReference>currenttask</assignNextValueToReference>
        <collectionReference>Tasks</collectionReference>
        <iterationOrder>Asc</iterationOrder>
        <nextValueConnector>
            <targetReference>increment_count</targetReference>
        </nextValueConnector>
        <noMoreValuesConnector>
            <targetReference>activity_minimum_reached</targetReference>
        </noMoreValuesConnector>
    </loops>
    <loops>
        <name>foreach_line_recipient</name>
        <label>foreach line recipient</label>
        <locationX>662</locationX>
        <locationY>577</locationY>
        <assignNextValueToReference>currentLineRecipient</assignNextValueToReference>
        <collectionReference>linerecipients</collectionReference>
        <iterationOrder>Asc</iterationOrder>
        <nextValueConnector>
            <targetReference>update_am</targetReference>
        </nextValueConnector>
    </loops>
    <processType>AutoLaunchedFlow</processType>
    <recordLookups>
        <name>Find_all_activity_records_for_the_opportunity</name>
        <label>Find all activity records for the opportunity</label>
        <locationX>485</locationX>
        <locationY>222</locationY>
        <assignNullValuesIfNoRecordsFound>false</assignNullValuesIfNoRecordsFound>
        <connector>
            <targetReference>for_each_task</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>WhatId</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>Opportunity.Id</elementReference>
            </value>
        </filters>
        <filters>
            <field>Subject</field>
            <operator>Contains</operator>
            <value>
                <stringValue>call</stringValue>
            </value>
        </filters>
        <filters>
            <field>Subject</field>
            <operator>NotEqualTo</operator>
            <value>
                <stringValue>ring.io call</stringValue>
            </value>
        </filters>
        <filters>
            <field>CreatedDate</field>
            <operator>GreaterThanOrEqualTo</operator>
            <value>
                <elementReference>Last90Days</elementReference>
            </value>
        </filters>
        <object>Task</object>
        <outputReference>Tasks</outputReference>
        <queriedFields>Id</queriedFields>
        <queriedFields>Call_Disposition__c</queriedFields>
    </recordLookups>
    <recordLookups>
        <name>Find_all_line_recipients</name>
        <label>Find all line recipients</label>
        <locationX>485</locationX>
        <locationY>577</locationY>
        <assignNullValuesIfNoRecordsFound>false</assignNullValuesIfNoRecordsFound>
        <connector>
            <targetReference>foreach_line_recipient</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Order__c</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>OriginatingOrder.Id</elementReference>
            </value>
        </filters>
        <object>LineRecipient__c</object>
        <outputReference>linerecipients</outputReference>
        <queriedFields>Id</queriedFields>
        <queriedFields>AccountManager__c</queriedFields>
    </recordLookups>
    <recordLookups>
