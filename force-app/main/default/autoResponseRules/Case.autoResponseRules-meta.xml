<?xml version="1.0" encoding="UTF-8"?>
<AutoResponseRules xmlns="http://soap.sforce.com/2006/04/metadata">
    <autoResponseRule>
        <fullName>Auto Responses</fullName>
        <active>true</active>
        <ruleEntry>
            <criteriaItems>
                <field>Case.Status</field>
                <operation>equals</operation>
                <value>New</value>
            </criteriaItems>
            <notifyCcRecipients>true</notifyCcRecipients>
            <replyToEmail>techsupport@fivestarprofessional.com</replyToEmail>
            <senderEmail>techsupport@fivestarprofessional.com</senderEmail>
            <senderName>Helpdesk</senderName>
            <template>Helpdesk/Case_Created</template>
        </ruleEntry>
        <ruleEntry>
            <criteriaItems>
                <field>Case.Status</field>
                <operation>equals</operation>
                <value>Closed</value>
            </criteriaItems>
            <notifyCcRecipients>true</notifyCcRecipients>
            <replyToEmail>techsupport@fivestarprofessional.com</replyToEmail>
            <senderEmail>techsupport@fivestarprofessional.com</senderEmail>
            <senderName>Helpdesk</senderName>
            <template>Helpdesk/Case_Resolved</template>
        </ruleEntry>
    </autoResponseRule>
</AutoResponseRules>
